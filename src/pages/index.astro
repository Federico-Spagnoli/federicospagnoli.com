---
import Layout from '../layouts/Layout.astro';

// --- CONFIGURAZIONE LINKS ---
const links = {
  email: "mailto:federico@federicospagnoli.com",
  github: "https://github.com/Federico-Spagnoli",
  linkedin: "https://www.linkedin.com/in/federico-spagnoli-82a3663a2/",
  insta: "https://www.instagram.com/fedeespagnoli/?hl=en",
  tiktok: "https://www.tiktok.com/@spagnolifederico07",
  x: "https://x.com/FedeSpa"
};

// --- SKILLS: Parole pesate per un profilo "Hybrid" ---
const words = ["Visionary", "Data Strategy", "Resilience", "Economics", "Code Engineering", "Problem Solving", "Creativity"];

// --- STILI CSS TAILWIND ---
const box = "bg-white border border-black/10 rounded-2xl overflow-hidden hover:shadow-xl hover:scale-[1.005] transition-all duration-500 ease-out relative group";
const darkBox = "bg-black text-white border border-white/10 rounded-2xl overflow-hidden hover:shadow-xl hover:scale-[1.005] transition-all duration-500 ease-out relative group";
const iconBtn = "w-10 h-10 flex flex-shrink-0 items-center justify-center rounded-full border border-black/10 hover:bg-black hover:text-white transition-all duration-300";
---

<Layout title="Federico Spagnoli | Strategic Visionary">
    
    <main class="relative min-h-screen p-4 md:p-8 max-w-[1400px] mx-auto">
        
        <header class="flex justify-between items-end mb-8 fade-in">
            <div class="w-12 h-12">
                <img src="/logo.svg" alt="Logo" class="w-full h-full text-black hover:rotate-180 transition-transform duration-700" />
            </div>
            <div class="text-right leading-tight">
                <p class="text-[10px] font-bold uppercase tracking-widest">© Federico Spagnoli</p>
                <p class="text-[10px] font-mono uppercase tracking-widest opacity-50">Brescia • {new Date().getFullYear()}</p>
            </div>
        </header>

        <div class="grid grid-cols-1 md:grid-cols-12 gap-4">

            <div class={`col-span-1 md:col-span-8 p-8 md:p-12 flex flex-col justify-center min-h-[380px] fade-in delay-100 ${box}`}>
                <div>
                    <h1 class="text-5xl md:text-7xl leading-[0.95] text-black mb-6 tracking-tight text-balance">
                        Visionary Tech. <br>
                        <span class="italic font-light text-neutral-500">Authentic Soul.</span>
                    </h1>
                    <p class="text-base md:text-lg max-w-lg font-medium leading-relaxed text-neutral-700 text-balance">
                        I am <span class="underline decoration-1 underline-offset-4">Federico</span>. 
                        Merging rigorous <strong>Engineering logic</strong> with creative strategy. 
                        I don't just study technology; I analyze how to use it to impact the real world.
                    </p>
                </div>

                <div class="mt-8 pt-6 border-t border-black/5 w-full flex flex-col gap-4">
                    
                    <div class="flex items-center gap-3">
                        <span class="text-[10px] font-bold uppercase tracking-widest w-16 text-neutral-400 hidden md:block">Connect</span>
                        <div class="flex gap-2">
                            <a href={links.github} target="_blank" class={iconBtn} aria-label="GitHub" title="My Code">
