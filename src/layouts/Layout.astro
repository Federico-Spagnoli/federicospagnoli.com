---
import '../styles/global.css';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="bg-[#F2F0ED] text-black overflow-x-hidden selection:bg-black selection:text-white">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/logo.svg" />
		<meta name="generator" content={Astro.generator} />
        
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&family=Playfair+Display:ital,wght@0,400;0,600;1,400&display=swap" rel="stylesheet">
        
		<title>{title}</title>
	</head>
	<body>
        <div id="loader" class="fixed inset-0 z-[100] bg-[#F2F0ED] flex items-center justify-center transition-opacity duration-700 ease-out">
            <div class="w-16 h-16 text-black animate-spin-slow">
                <img src="/logo.svg" alt="Loading" class="w-full h-full" />
            </div>
        </div>

        <div class="fixed inset-0 z-[90] pointer-events-none opacity-[0.04] mix-blend-multiply" style="background-image: url('https://grainy-gradients.vercel.app/noise.svg');"></div>
        
		<slot />

        <script>
            window.addEventListener('load', () => {
                const loader = document.getElementById('loader');
                if (loader) {
                    // Aspetta 1.2 secondi (gira un po') poi svanisce
                    setTimeout(() => {
                        loader.style.opacity = '0';
                        setTimeout(() => {
                            loader.style.display = 'none';
                        }, 700);
                    }, 1200);
                }
            });
        </script>
	</body>
</html>

<style is:global>
    @keyframes spin-slow {
        from { transform: rotate(0deg); }
        to { transform: rotate(360deg); }
    }
    .animate-spin-slow {
        animation: spin-slow 6s linear infinite;
    }

    body { font-family: 'Inter', sans-serif; }
    h1, h2, h3, .serif { font-family: 'Playfair Display', serif; }
</style>